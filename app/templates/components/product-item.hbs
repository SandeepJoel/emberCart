{{yield}}
{{ log "cool" product}}
{{#link-to 'products.product-details' product}}
  <b>{{product.itemName}}</b>
{{/link-to }}
<p>{{product.shortDescription}}</p>
<p>Available stocks: {{product.avaliableQuantity}}</p>
<p>Cost: ${{product.cost}}</p>
<button {{ action 'addToCart' product }} disabled={{if product.avaliableQuantity false true }}> 
  {{if product.avaliableQuantity "Add product to cart" "Product Out of stock"}} </button>